<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/cust_category_title">

        <PreferenceCategory
            android:title="Customize Preference Category"
            android:key="declan_pref_category">
			
            <com.afterlife.support.preference.SystemSettingSwitchPreference
                android:title="Background title"
                android:key="declan_category_background_enabled"
				android:summary="Display Card View in preference category"
                android:defaultValue="false" 
				settings:layout="@layout/afterlab_card_preference_top" />
				
            <com.afterlife.support.preference.SystemSettingListPreference
                android:entries="@array/declan_category_background_entries"
                android:title="Background color style"
                android:key="declan_category_background_style"
                android:dependency="declan_category_background_enabled"
                android:summary="%s"
                android:defaultValue="0"
                android:entryValues="@array/declan_category_background_values" 
				settings:layout="@layout/afterlab_card_preference_middle" />
				
            <com.afterlife.support.preference.SystemSettingSwitchPreference
                android:title="Icon view"
                android:key="declan_category_icon_enabled"
				android:summary="Display Icon View in preference category"
                android:defaultValue="false" 
				settings:layout="@layout/afterlab_card_preference_middle" />
				
            <com.afterlife.support.preference.SystemSettingListPreference
                android:entries="@array/declan_category_icon_style_entries"
                android:title="Icon view style"
                android:key="declan_category_icon_style"
                android:dependency="declan_category_icon_enabled"
                android:summary="%s"
                android:defaultValue="0"
                android:entryValues="@array/declan_category_icon_style_values" 
				settings:layout="@layout/afterlab_card_preference_middle" />
				
            <com.afterlife.support.preference.SystemSettingSwitchPreference
                android:title="Title view allCaps"
                android:key="declan_category_allcaps_enabled"
				android:summary="Use text allcaps on preference category"
                android:defaultValue="false" 
				settings:layout="@layout/afterlab_card_preference_middle" />
				
            <com.afterlife.support.preference.SystemSettingSwitchPreference
                android:title="Title view bold"
                android:key="declan_category_bold_enabled"
				android:summary="Use bold text on preference category"
                android:defaultValue="false" 
				settings:layout="@layout/afterlab_card_preference_bottom" />
				
            <com.afterlife.support.preference.SystemSettingSeekBarPreference
                android:max="35"
                android:title="Corner top left"
                android:key="declan_category_corner_topL"
                android:dependency="declan_category_background_enabled"
                android:defaultValue="8"
                settings:units="dp" 
				settings:layout="@layout/preference_custom_seekbar" />
				
            <com.afterlife.support.preference.SystemSettingSeekBarPreference
                android:max="35"
                android:title="Corner top right"
                android:key="declan_category_corner_topR"
                android:dependency="declan_category_background_enabled"
                android:defaultValue="8"
                settings:units="dp" 
				settings:layout="@layout/preference_custom_seekbar" />
				
            <com.afterlife.support.preference.SystemSettingSeekBarPreference
                android:max="35"
                android:title="Corner bot left"
                android:key="declan_category_corner_botL"
                android:dependency="declan_category_background_enabled"
                android:defaultValue="8"
                settings:units="dp" 
				settings:layout="@layout/preference_custom_seekbar" />
				
            <com.afterlife.support.preference.SystemSettingSeekBarPreference
                android:max="35"
                android:title="Corner bot right"
                android:key="declan_category_corner_botR"
                android:dependency="declan_category_background_enabled"
                android:defaultValue="8"
                settings:units="dp" 
				settings:layout="@layout/preference_custom_seekbar" />
				
            <com.afterlife.support.preference.SystemSettingSeekBarPreference
                android:max="35"
                android:title="Padding left"
                android:key="declan_category_padding_left"
                android:dependency="declan_category_background_enabled"
                android:defaultValue="4"
                settings:units="dp" 
				settings:layout="@layout/preference_custom_seekbar" />
				
            <com.afterlife.support.preference.SystemSettingSeekBarPreference
                android:max="35"
                android:title="Padding right"
                android:key="declan_category_padding_right"
                android:dependency="declan_category_background_enabled"
                android:defaultValue="4"
                settings:units="dp" 
				settings:layout="@layout/preference_custom_seekbar" />
				
            <com.afterlife.support.preference.SystemSettingSeekBarPreference
                android:max="35"
                android:title="Padding top"
                android:key="declan_category_padding_top"
                android:dependency="declan_category_background_enabled"
                android:defaultValue="4"
                settings:units="dp" 
				settings:layout="@layout/preference_custom_seekbar" />
				
            <com.afterlife.support.preference.SystemSettingSeekBarPreference
                android:max="35"
                android:title="Padding bottom"
                android:key="declan_category_padding_bot"
                android:dependency="declan_category_background_enabled"
                android:defaultValue="4"
                settings:units="dp" 
				settings:layout="@layout/preference_custom_seekbar" />
        </PreferenceCategory>
    </PreferenceScreen>